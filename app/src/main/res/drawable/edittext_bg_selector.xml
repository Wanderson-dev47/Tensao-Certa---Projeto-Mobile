<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado focado -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/teal_200" /> <!-- Cor do contorno ao focar -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/border_gray_light" /> <!-- Cor do contorno no estado normal -->
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>
